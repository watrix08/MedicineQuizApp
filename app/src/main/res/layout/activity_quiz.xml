<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@android:style/Theme.NoTitleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".QuizActivity"
    android:longClickable="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pytanie"
        android:id="@+id/questionTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars = "vertical"
        android:textSize="15dp"
        android:layout_above="@+id/nextQuestionButton"/>

    <pl.tomaszwatras.app.model.QuizButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Opdowiedź 1"
        android:id="@+id/answer1"
        android:textSize="13dp"
        android:layout_above="@+id/answer2"
        android:layout_alignRight="@+id/nextQuestionButton"
        android:layout_alignEnd="@+id/nextQuestionButton"/>


    <pl.tomaszwatras.app.model.QuizButton
        android:id="@+id/answer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Opdowiedź 2"
        android:textSize="13dp"
        android:layout_above="@+id/answer3"
        android:layout_alignRight="@+id/nextQuestionButton"
        android:layout_alignEnd="@+id/nextQuestionButton"/>

    <pl.tomaszwatras.app.model.QuizButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Opdowiedź 3"
        android:id="@+id/answer3"
        android:textSize="13dp"
        android:layout_above="@+id/answer4"
        android:layout_alignRight="@+id/nextQuestionButton"
        android:layout_alignEnd="@+id/nextQuestionButton"/>

    <pl.tomaszwatras.app.model.QuizButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Opdowiedź 4"
        android:id="@+id/answer4"
        android:textSize="13dp"
        android:layout_above="@+id/answer5"
        android:layout_alignRight="@+id/nextQuestionButton"
        android:layout_alignEnd="@+id/nextQuestionButton"/>


    <pl.tomaszwatras.app.model.QuizButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Opdowiedź 5"
        android:id="@+id/answer5"
        android:textSize="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Następne"
        android:id="@+id/nextQuestionButton"
        android:textSize="11dp"
        android:layout_above="@+id/answer1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:id="@+id/quiz_activity_id_textView"
        android:layout_above="@+id/answer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="11dp"/>
</RelativeLayout>


